<% layout("/layouts/boilerplate") %>
<body>
  <div class="cards">
    <%for(listings of allListings){%>
      <div class="card">
        <header>
          <h2><%= listings.title%></h2>
        </header>
        <img src="<%= listings.image %>" alt="Hotel image" class="images">
        <div class="content">
          <p> <%= listings.description %> </p>
          <form action="/listings/<%= listings.id %>" method="get">
            <button type="submit" name="id">Explore</button>
          </form>
        </div>
      </div>
      <% } %>
  </div>
</body>
